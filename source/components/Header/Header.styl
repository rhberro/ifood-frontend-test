@require '../../assets/stylesheets/colors'
@require '../../assets/stylesheets/components'

.header
  width 100%
  border-bottom-color $gray-10
  border-bottom-style solid
  border-bottom-width 1px
  position fixed
  background-color white
  z-index 10

  &__container
    @extends .container,
      .container--centered,
      .container--small-padding

  &__logo
    font-size 30px
    font-weight 900
    line-height 50px
    text-decoration none
    color $primary

@media (max-width: 699px)
  .header
    &__container
      text-align center
