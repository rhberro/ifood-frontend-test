@require '../../../../assets/stylesheets/colors'
@require '../../../../assets/stylesheets/components'

.playlists-filters
  width 100%
  border-bottom-color $gray-10
  border-bottom-style solid
  border-bottom-width 1px
  position fixed
  background-color white
  z-index 10

  &__container
    @extends .container,
      .container--centered,
      .container--small-padding

  &__container--mobile
    display none

  &__form
    display flex

  &__button
    background-color white
    color $primary
    border-style solid
    border-width 1px
    border-color $primary
    border-radius 4px
    height 32px
    font-size 14px
    font-weight 300
    transition-duration 50ms
    transition-property background
    transition-timing-function ease
    padding-left 30px
    padding-right 30px

  &__button:hover
    background-color $primary
    color white

  &__button:active
    background-color $primary-120
    color white

  &__button--link
    border unset
    color $gray
    width 100%

  &__button--link:hover
    background-color white
    color $gray

  &__button--link:active
    background-color white
    color $gray

@media (max-width: 699px)
  .playlists-filters
    &--opened
      top 0

    &__container
      display none

    &__container--opened
      display block

    &__container--mobile
      display block

    &__form
      flex-direction column
